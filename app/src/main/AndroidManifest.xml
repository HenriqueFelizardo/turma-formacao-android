<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="br.com.cast.turmaformacao.taskmanager"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".TaskManagerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".controlles.activities.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".controlles.activities.TaskListActivity"
            android:label="@string/lbl_task_list">
        </activity>

        <activity
            android:name=".controlles.activities.MainActivity"
            android:label="Task Manager">
        </activity>

        <activity
            android:name=".controlles.activities.TaskFormActivity"
            android:label="@string/lbl_create_task">
        </activity>

        <activity
            android:name=".controlles.activities.LabelFormActivity"
            android:label="@string/lbl_create_label">

        </activity>

        <activity
            android:name=".controlles.activities.NewUserActivity"
            android:label="@string/lbl_new_user">

        </activity>

    </application>

</manifest>
